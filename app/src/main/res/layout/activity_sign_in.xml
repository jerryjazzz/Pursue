<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.catopia.pursue.SignInActivity">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fillColor="#73ffe5"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:autoPlay="false"
        app:strokeColor="#cc59fd"
        app:strokeWidth="1dp"
        android:layout_above="@+id/fb_login_button"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:id="@+id/fb_login_button"
        android:layout_width="@dimen/sign_in_button_width"
        android:layout_height="@dimen/sign_in_button_height"
        android:layout_above="@+id/g_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:contentDescription="@string/facebook_btn_desc"
        android:padding="0dp"
        android:src="@drawable/selector_button_facebook"/>

    <ImageButton
        android:id="@+id/g_login_button"
        android:layout_width="@dimen/sign_in_button_width"
        android:layout_height="@dimen/sign_in_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fb_login_button"
        android:layout_marginBottom="43dp"
        android:contentDescription="@string/google_btn_desc"
        android:padding="0dp"
        android:src="@drawable/selector_button_google"/>

</RelativeLayout>

