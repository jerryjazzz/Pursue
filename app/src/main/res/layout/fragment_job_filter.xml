<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.catopia.pursue.JobFilterFragment"
             android:id="@+id/jobFilterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jobTitleEditText"
            android:inputType="text"
            android:hint="@string/job_title_hint"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/radiusTextView"
            android:layout_marginTop="47dp"
            android:layout_alignEnd="@+id/radiusSeekBar"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationEditText"
            android:layout_marginTop="45dp"
            android:inputType="text"
            android:hint="@string/location_hint"
            android:layout_below="@+id/jobTitleEditText"
            android:layout_alignStart="@+id/jobTitleEditText"
            android:layout_alignEnd="@+id/jobTitleEditText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radius_hint"
            android:id="@+id/radiusTextView"
            android:textSize="30sp"
            android:layout_below="@+id/locationEditText"
            android:layout_alignStart="@+id/radiusSeekBar"
            android:layout_marginTop="41dp"/>

        <SeekBar
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/radiusSeekBar"
            android:layout_below="@+id/radiusTextView"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/distanceNumberTextView"
            android:layout_alignBottom="@+id/radiusTextView"
            android:layout_toEndOf="@+id/radiusTextView"
            android:textSize="30sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_time_checkbox"
            android:id="@+id/checkBox"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/radiusSeekBar"
            android:layout_alignEnd="@+id/radiusSeekBar"
            android:layout_alignStart="@+id/radiusSeekBar"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/part_time_checkbox"
            android:id="@+id/checkBox2"
            android:layout_below="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox"
            android:layout_alignEnd="@+id/radiusSeekBar"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contract_checkbox"
            android:id="@+id/checkBox3"
            android:layout_below="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2"
            android:layout_alignEnd="@+id/checkBox2"/>

    </RelativeLayout>
</FrameLayout>
